<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE web-app
    PUBLIC "-//Sun Microsystems, Inc.//DTD Web Application 2.3//EN"
    "http://java.sun.com/dtd/web-app_2_3.dtd">

<web-app>
  
  <!-- Servlets -->
  <servlet>
    <servlet-name>shortenServlet</servlet-name>
    <servlet-class>org.sryl.shortener.server.ShortenServiceImpl</servlet-class>
  </servlet>
  
  <servlet-mapping>
    <servlet-name>shortenServlet</servlet-name>
    <url-pattern>/shortener/shorten</url-pattern>
  </servlet-mapping>
  
  <!-- Default page to serve -->
  <welcome-file-list>
    <welcome-file>Shortener.html</welcome-file>
  </welcome-file-list>

</web-app>
